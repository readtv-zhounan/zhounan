<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        <link rel="shortcut icon" href="/favicon.ico" type="image/ico">
        {% block stylesheets %}
            {% stylesheets filter="scssphp" output="css/app.css"
                "assets/css/public/*"
            %}
                <link href="{{ asset_url }}" rel="stylesheet">
            {% endstylesheets %}
            <link href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/jqueryui/1.11.4/jquery-ui.min.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/select2/3.5.2/select2.min.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/fullcalendar/2.3.2/fullcalendar.min.css" rel="stylesheet">
            <link href="//cdn.bootcss.com/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
        {% endblock stylesheets %}
        <!--[if lt IE 9]>
            <script src="//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {{ block('body') }}

        {% block scripts %}
            <script src="//cdn.bootcss.com/jquery/2.1.3/jquery.min.js"></script>
            <script src="//cdn.bootcss.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
            <script src="//cdn.bootcss.com/select2/3.5.2/select2.min.js"></script>
            <script src="//cdn.bootcss.com/jqueryui/1.12.1/jquery-ui.min.js"></script>
            <script src="//cdn.bootcss.com/moment.js/2.10.6/moment.min.js"></script>
            <script src="//cdn.bootcss.com/moment.js/2.10.6/locale/zh-cn.js"></script>
            <script src="//cdn.bootcss.com/flot/0.8.3/jquery.flot.min.js"></script>
            <script src="//cdn.bootcss.com/flot/0.8.3/jquery.flot.time.min.js"></script>
            <script src="//cdn.bootcss.com/flot/0.8.3/jquery.flot.pie.min.js"></script>
            <script src="//cdn.bootcss.com/flot/0.8.3/jquery.flot.categories.min.js"></script>
            <script src="//cdn.bootcss.com/flot.tooltip/0.8.5/jquery.flot.tooltip.min.js"></script>
            <script src="//cdn.bootcss.com/jquery-noty/2.3.5/jquery.noty.min.js"></script>
            <script src="//cdn.bootcss.com/jquery-noty/2.3.5/layouts/top.min.js"></script>
            <script src="//cdn.bootcss.com/jquery-noty/2.3.5/themes/default.min.js"></script>
            <script src="//cdn.bootcss.com/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
            <script src="//cdn.rawgit.com/markrcote/flot-tickrotor/master/jquery.flot.tickrotor.js"></script>
            {% javascripts 'assets/js/*' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            {% if app.session.flashbag.peekAll %}
                <script>
                    $(function() {
                        {% for type, flashes in app.session.flashbag.all %}
                            {% for flash in flashes %}
                                noty({text: '{{ flash }}', layout:'top', type:'{{ type }}'});
                            {% endfor %}
                        {% endfor %}
                    });
                </script>
            {% endif %}
        {% endblock scripts %}
    </body>
</html>
