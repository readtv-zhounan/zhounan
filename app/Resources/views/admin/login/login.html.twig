{% extends 'admin/base.html.twig' %}

{% block body_content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
                <div class="widget">
                    <div class="widget-head">
                        <div class="pull-left">登录</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget-content">
                        <div class="padd">
                            <form action="{{ path('admin_login_check') }}" method="post" role="form">
                                {% if error %}
                                    <p class="label label-danger">{{ error.message }}</p>
                                {% endif %}
                                <div class="form-group">
                                    <label for="username" class="control-label">账号</label>
                                    <input class="form-control" type="text" id="username" name="_username" value="{{ username }}">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">密码</label>
                                    <input class="form-control" type="password" id="password" name="_password">
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="_remember_me" name="_remember_me">
                                            5天之内不用再次登录
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <input type="hidden" name="_failure_path" value="{{ failurePath }}">
                                    <input type="submit" value="登录" class="btn btn-primary btn-block">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body_content %}
