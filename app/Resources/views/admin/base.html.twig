{% extends 'base.html.twig' %}

{% set home_url = path('admin_home') %}

{% block title %}blog后台管理{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="//cdn.bootcss.com/select2/3.5.2/select2.min.css" rel="stylesheet">
    <link href="//cdn.bootcss.com/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css" rel="stylesheet">
    {% stylesheets filter="scssphp" output="css/admin.css"
        "assets/css/admin/*"
    %}
        <link href="{{ asset_url }}" rel="stylesheet">
    {% endstylesheets %}
{% endblock stylesheets %}

{% block scripts %}
    {{ parent() }}

    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <script src="//cdn.bootcss.com/select2/3.5.2/select2.min.js"></script>
    {% javascripts 'assets/js/admin/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock scripts %}
